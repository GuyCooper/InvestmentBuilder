@model InvestmentBuilderWeb.Models.AccountModelDto

<h2>@ViewBag.Title</h2>

<div class="editor">

    @if (ViewBag.HasError == true)
    {
        @Html.Partial("~/Views/InvestmentRecord/RaiseAlert.cshtml")
    }

    <form name="investmentAccountForm" role="form" action="EditInvestmentAccount" method="post" onsubmit="javascript: editInvestmentAccount()">
        <div class="form-group">
            <label>Account Name</label>
            <input class="form-control" name="AccountName" value="@Model.AccountName" readonly="readonly" />
        </div>

        <div class="form-group">
            <label>Description</label>
            <input class="form-control" name="AccountDescription" value="@Model.AccountDescription" readonly="readonly" />
        </div>

        <div class="form-group">
            <label>Reporting Currency</label>
            <input class="form-control" name="ReportingCurrency" value="@Model.ReportingCurrency" readonly="readonly" />
        </div>

        <div class="form-group">
            <label>Account Type</label>
            <input class="form-control" name="AccountType" value="@Model.AccountType" readonly="readonly" />
        </div>

        @Html.Partial("AddAccountMembers")

        <div class="form-group">
            <a href="@Url.Action("Index", "InvestmentRecord")" class="btn btn-sm">Cancel</a>
            <input type="submit" value="Submit" />
        </div>
    </form>
</div>