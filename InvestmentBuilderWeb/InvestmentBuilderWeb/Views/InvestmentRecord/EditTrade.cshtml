@model InvestmentBuilderWeb.Models.TradeItemModel

<h2>Edit Trade</h2>

<div class="editor">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        //<form role="form">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Name)
            @Html.DisplayFor(m => m.Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.TransactionDate)
            @Html.TextBox("TransactionDate", DateTime.Today.ToShortDateString(), new
            {
                @class = "form-control datetime",
                onclick = "javascript:onDisplayDateTimePicker()",
                onchange = "javascript:onDisplayDateTimePicker()"
            })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Quantity)
            @Html.EditorFor(m => m.Quantity, new { @class = "form-control" })
        </div>
        
        <div class="form-group">
            @Html.DropDownList("Action", (IEnumerable<SelectListItem>)ViewBag.Actions, new { @class = "form-control" });
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.TotalCost)
            @Html.EditorFor(m => m.TotalCost, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ManualPrice)
            @Html.EditorFor(m => m.ManualPrice, new { @class = "form-control" })
        </div> 
              
        <div class="form-group">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close </button>
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    }
</div>
