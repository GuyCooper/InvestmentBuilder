@model InvestmentBuilderWeb.Models.CashFlowModel
@{
    ViewBag.Title = "CashFlow";
}

<ul class="nav nav-tabs nav-justified">
    <li><a href="@Url.Action("index")">Portfolio</a></li>
    <li><a href="@Url.Action("CashFlow")">CashFlow</a></li>
    <li><a href="@Url.Action("Performance")">Performance</a></li>
</ul>


<div class="panel panel-default"> 
    <div class="panel-heading">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Receipts</a> 
            </div>
            <button type="button" class="btn btn-default navbar-btn navbar-right">
                 Add Receipt
            </button>
    </div>
    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Transaction Date</th>
                <th>Parameter</th>
                <th>Subscription</th>
                <th>Sale</th>
                <th>Dividend</th>
                <th>Other Receipts</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Receipts)
        { 
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TransactionDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Parameter)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subscription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sale)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dividend)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Other)
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
<div class="panel panel-default">
    <div class="panel-heading">Payments</div>
    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Transaction Date</th>
                <th>Parameter</th>
                <th>Withdrawls</th>
                <th>Purchases</th>
                <th>Other Payments</th>
            </tr>
        </thead>
       <tbody>
        @foreach (var item in Model.Payments)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TransactionDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Parameter)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Withdrawls)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Purchases)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Other)
                </td>
            </tr>
        }
       </tbody>
    </table>
</div>


